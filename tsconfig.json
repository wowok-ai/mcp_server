{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ES2022", 
      "moduleResolution": "Bundler",
      "outDir": "./build",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }